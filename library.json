  "keywords": "Communication",
  "version": "0.13.0",
  "authors": {
    "name": "macc-n",
    "mainteiner": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/macc-n/arduino-wot.git"
  },
  "license": "MPL-2.0",
  "frameworks": "arduino",
  "platforms": "espressif8266,espressif32,atmelavr,atmelsam",
  "dependencies": {
    "bblanchon/ArduinoJson": "^6.17.0"
  },
  "export": {
    "exclude": [
      "docs"
    ]
  },
  "examples": [
    {
      "name": "AsyncProperty",
      "base": "examples/PlatformIO/AsyncProperty",
      "files": [
        "platformio.ini",
        "src/main.cpp"
      ]      
    },
    {
      "name": "BME280",
      "base": "examples/PlatformIO/BME280",
      "files": [
        "platformio.ini",
        "src/main.cpp"
      ]      
    },
    {
      "name": "LED",
      "base": "examples/PlatformIO/LED",
      "files": [
        "platformio.ini",
        "src/main.cpp"
      ]      
    },
    {
      "name": "TextDisplay",
      "base": "examples/PlatformIO/TextDisplay",
      "files": [
        "platformio.ini",
        "src/main.cpp"
      ]      
    }
  ]
}
